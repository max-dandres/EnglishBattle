@page
@using EnglishBattle.Web.Resources
@model IndexModel
@{
    ViewData["Title"] = SharedResources.Home;
    string[] titles = new string[3] { Game.Easy, Game.Medium, Game.Hard };
    int index = 0;
}

<div class="container">

    <div class="row gx-2">
        @foreach (var group in Model.Verbs)
        {
            <div class="col">
                <h3>@titles[index++]</h3>
                <div class="bg-white">
                    <table class="table text-left">
                        <thead>
                            <tr>
                                <th scope="col">@SharedResources.VerbBase</th>
                                <th scope="col">@SharedResources.VerbPastParticiple</th>
                                <th scope="col">@SharedResources.VerbPastSimple</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var verb in group)
                            {
                                <tr>
                                    <td scope="row">@verb.BaseForm</td>
                                    <td>@verb.PastParticiple</td>
                                    <td>@verb.PastSimple</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>
